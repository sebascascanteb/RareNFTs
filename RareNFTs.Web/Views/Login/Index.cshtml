@model RareNFTs.Web.ViewModels.ViewModelLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/spinner.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RareNFTs.Web.styles.css" asp-append-version="true" />
    <!--====== Required meta tags ======-->
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Login</title>
    <!--====== Lineicons CSS ======-->
    <link href="https://cdn.lineicons.com/3.0/lineicons.css" rel="stylesheet" />
    <!--====== Tiny Slider Css ======-->
    <link rel="stylesheet" href="https://cdn.ayroui.com/1.0/css/tiny-slider.css" />
    <!-- Toast-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <!-- SweetAlert-->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.4/dist/sweetalert2.min.css" rel="stylesheet">
    <!--AutoComplete https://www.cssscript.com/demo/bootstrap-5-autocomplete/ -->
    <link href="~/css/autocompleteBS.css" rel="stylesheet">
    <!--JQuery UI CSS-->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

</head>


<body style="background-color:black">



    <!--====== SIGNIN ONE PART START ======-->
    <section class="signin-area signin-one">

        <div class="d-flex align-items-center justify-content-center pb-5">
            <img src="~/Images/logoblack.png" alt="Logo" width="400px" />
        </div>

        <div id="formContainer">
            <div id="form-ui">
                <form asp-controller="Login" asp-action="LogIn" method="post" asp-antiforgery="true" id="form">
                    <div id="form-body">
                        <div id="welcome-lines">

                            <div id="welcome-line-2">Welcome</div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-input">
                                <label>Email Account</label>
                                <div class="input-items default">
                                    <input asp-for="User" class="form-control" type="text" autocomplete="true" placeholder="Email" />
                                    <span asp-validation-for="User" class="text-danger"></span>
                                    <i class="lni lni-envelope"></i>
                                </div>
                            </div>
                            <!-- form input -->
                        </div>

                        <div class="">
                            <div class="form-input">
                                <label>Password</label>
                                <div class="input-items default">
                                    <input asp-for="Password" class="form-control" type="password" autocomplete="false" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <i class="lni lni-key"></i>
                                </div>
                            </div>
                            <!-- form input -->
                        </div>


                        <div class="d-flex justify-content-center align-content-center pt-4">

                            <button class="btn gradient-btn rounded-full" type="submit" onclick="spinnerEffect()">Sign in</button>

                        </div>

                        @if (@ViewBag.Message != null)
                        {
                            <!-- start single alert -->
                            <div class="alert alert-error-light d-flex align-items-center mt-4">
                                <div class="alert-icon">
                                    <i class="lni lni-play"></i>
                                </div>
                                <div class="alert-message">
                                    <h5 class="message-title">Error</h5>
                                    <p class="text">
                                        @ViewBag.Message
                                    </p>
                                </div>
                            </div>
                            <!-- end single alert -->
                        }
                    </div>
                </form>
            </div>            
        </div>
        <!-- container -->
    </section>
    <!--====== SIGNIN ONE PART ENDS ======-->

    <section>
    </section>


    <!-- Div para spinner -->
    <div id="loader" class="spinnerx">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

    @await Html.PartialAsync("_Footer")

    <script type="text/javascript">
        function spinnerEffect() {
            document.getElementById("loader").className = "spinner";
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Toast-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Ajax unobtrusive-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js" integrity="sha512-f04GBpoqEZhbyjlRTuXeg8FIHDb+xfCJ0LVdqiN1fEl5B3jz3Z0SPe9IxDumOVdTeeXmKMcMJhb26VuGf1Laqw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- SweetAlert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.4/dist/sweetalert2.all.min.js"></script>
    <!--AutoComplete  https://www.cssscript.com/demo/bootstrap-5-autocomplete/  -->
    <!-- JQuery UI Autocomplete -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script src="~/js/autocompleteBS.js" asp-append-version="true"></script>


</body>
</html>
