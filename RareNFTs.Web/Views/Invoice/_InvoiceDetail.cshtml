
@model IEnumerable<RareNFTs.Application.DTOs.InvoiceDetailDTO>

<div id="myCard">
    <div class="card">
        <div class="card-header">
            Detail
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered text-center" id="detalleFactura">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Sequence)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdNft)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NftDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                          
                            <th>
                                @Html.DisplayNameFor(model => model.TotalLine)
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model != null)
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Sequence)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.IdNft)
                                        </td>
                                        <td align="left">
                                            @Html.DisplayFor(modelItem => item.NftDescription)
                                        </td>
                                        <td align="right">
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td align="right">
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>

                                        <td align="right">
                                            @Html.DisplayFor(modelItem => item.TotalLine)
                                        </td>
                                        <td align="right">
                                            <button type="button" class="btn btn-danger" onclick="deleteProduct(@item.Sequence)">Delete</button>
                                        </td>
                                    </tr>
                                }
                            <!-- Add dummy row in order to show totals-->
                            <tr>
                                <td align="center">
                                </td>
                                <td align="center">
                                </td>
                                <td align="left">
                                </td>
                                <td align="right">
                                </td>
                                <td align="right">
                                </td>
                                <td align="right">
                                </td>
                                <td align="right">
                                    @{
                                        if (Model != null)
                                            @Model.Sum(p => p.TotalLine).ToString()
                                    }

                                </td>
                                <td align="right">
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
